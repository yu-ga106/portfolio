<% if photo.liked_by?(current_user) %>
  <%= link_to photo_likes_path(photo), method: :delete, remote: true do %>
    <i class="fas fa-heart" style="color: red;"><span style="text-decoration: none; font-size: 8px; color: red;">いいね</span></i>
  <% end %>
<% else %>
  <%= link_to photo_likes_path(photo), method: :post, remote: true do %>
    <i class="far fa-heart" style="color: black;"><span style="font-size: 8px; color: black; text-decoration: none;">いいね</span></i>
  <% end %>
<% end %>