<div class="row" style="margin: 20px 0;">
  <div class="col-12" style="text-align: center;">
    <h1 class="gamerssns" style="color: black; font-size: 70px;">Gamers Sns</h1>
    <h3>ログイン</h3>
  </div>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-row">
    <div class="col-12">
      <div class="field">
        <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "メールアドレス", class: "form-control", style: "max-width: 510px; margin: auto;" %>
      </div>
    </div>
  </div>
  <div class ="form-row">
    <div class="col-12">
      <div class="field">
        <%= f.password_field :password, autocomplete: "current-password", placeholder: "パスワード", class: "form-control", style: "max-width: 510px; margin: auto;" %>
      </div>
    </div>
  </div>

  <div class="form-row">
    <div class="col-12">
      <div class="actions">
        <%= f.submit 'ログイン', class: "btn btn-primary btn-block", style: "max-width: 510px; margin: auto;" %>
      </div>
    </div>
  </div>
<% end %>

<div class="form-row">
  <div class="col-12">
    <%= render "users/shared/links" %>
  </div>
</div>