<% if user != current_user %>
  <% if current_user.following?(user) %>
    <%= link_to 'フォロー中', user_unfollow_path(user.id), class: "btn btn-sm btn-primary", style: "width: 120px;", method: :post, remote: true %>
  <% else %>
    <%= link_to 'フォローする', user_follow_path(user.id), class: "btn btn-sm btn-outline-primary", style: "width: 120px;", method: :POST, remote: true %>
  <% end %>
<% end %>