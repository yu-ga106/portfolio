<div class="row" style="margin: 20px 0;">
  <div class="col-12" style="text-align: center;">
    <h1 class="gamerssns" style="color: black; font-size: 70px;">Gamers Sns</h1>
    <h3>新規登録</h3>
  </div>
</div>

<div class="row">
  <div class="col-12" style="max-width: 510px; margin: auto;">
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "users/shared/error_messages", resource: resource %>
  </div>
</div>

<div class="form-row">
  <div class="col-6">
    <div class="field">
      <%= f.text_field :last_name, autofocus: true, placeholder: "姓", class: "form-control", style: "max-width: 250px; margin-left: auto;" %>
    </div>
  </div>
  <div class="col-6">
    <div class="field">
      <%= f.text_field :first_name, placeholder: "名", class: "form-control", style: "max-width: 250px" %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="col-6">
    <div class="field">
      <%= f.text_field :read_last_name, placeholder: "セイ", class: "form-control", style: "max-width: 250px; margin-left: auto;" %>
    </div>
  </div>
  <div class="col-6">
    <div class="field">
      <%= f.text_field :read_first_name, placeholder: "メイ", class: "form-control", style: "max-width: 250px;" %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="col-12">
    <div class="field">
      <%= f.email_field :email, placeholder: "メールアドレス", class: "form-control", style: "max-width: 510px; margin: auto;" %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="col-12">
    <div class="field">
      <%= f.password_field :password, placeholder: "パスワード(6文字以上)", class: "form-control", style: "max-width: 510px; margin: auto;" %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="col-12">
    <div class="field">
      <%= f.password_field :password_confirmation, placeholder: "パスワード(確認用)", class: "form-control", style: "max-width: 510px; margin: auto;" %>
    </div>
  </div>
</div>
<div class="form-row">
  <div class="col-12">
    <div class="actions">
      <%= f.submit '新規登録', class: "btn btn-success btn-block", style: "max-width: 510px; margin: auto;" %>
    </div>
  </div>
</div>
<% end %>

<div class="form-row">
  <div class="col-12">
    <%= render "users/shared/links" %>
  </div>
</div>