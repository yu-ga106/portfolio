<!DOCTYPE html>
<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <title>Gamers Sns</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/css/lightbox.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/lightbox2/2.7.1/js/lightbox.min.js" type="text/javascript"></script>
    <script src="https://kit.fontawesome.com/508442784e.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body style="background-color: #8a9bff;">

    <% if current_page?("/admins/sign_in") %>
      <nav class="navbar navbar-expand-md sticky-top" style="background-color: #00aeff">
        <a class="navbar-brand gamerssns admin_top" href="#">Gamers Sns</a>
      </nav>
    <% else %>
      <nav class="navbar navbar-expand-md sticky-top" style="background-color: #00aeff">
        <span id="top" style="margin: 0 auto;">
          <a class="navbar-brand gamerssns" href="#">Gamers Sns</a>
        </span>
        <button type="button" class="navbar-toggler" data-toggle="collapse" data-target="#Navbar" aria-controls="Navbar" aria-expanded="false" aria-label="ナビゲーションの切替">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="Navbar">

          <% if user_signed_in? %>
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to user_path(current_user), class: "nav-link" do %>
                  <i class="fas fa-user"> マイページ</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to photos_path, class: "nav-link" do %>
                  <i class="fas fa-images"> 投稿一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_photo_path, class: "nav-link" do %>
                  <i class="fas fa-edit"> 投稿する</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to destroy_user_session_path, method: :delete, class: "nav-link" do %>
                  <i class="fas fa-sign-out-alt"> ログアウト</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_contacts_path, class: "nav-link" do %>
                  <i class="fas fa-envelope"> お問い合わせ</i>
                <% end %>
              </li>
            </ul>

          <% elsif admin_signed_in? %>
            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to admins_home_top_path, class: "nav-link" do %>
                  <i class="fas fa-home"> Top</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admins_users_path, class: "nav-link" do %>
                  <i class="fas fa-users"> ユーザー一覧</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to admins_photos_path, class: "nav-link" do %>
                  <i class="fas fa-images"> 投稿一覧</i>
                <% end %>
              </li>
              <li class="nav-link">
                <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link" do %>
                  <i class="fas fa-sign-out-alt"> ログアウト</i>
                <% end %>
              </li>
              <li class="nav-link">
                <%= link_to admins_contacts_path, class: "nav-link" do %>
                  <i class="fas fa-envelope"> お問い合わせ</i>
                <% end %>
              </li>
            </ul>
          <% else %>

            <ul class="navbar-nav mr-auto"></ul>
            <ul class="navbar-nav">
              <li class="nav-item">
                <%= link_to root_path, class: "nav-link" do %>
                  <i class="fas fa-home"> Top</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to homes_about_path, class: "nav-link" do %>
                  <i class="fas fa-question-circle"> Gamers Snsとは？</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to user_session_path, class: "nav-link" do %>
                  <i class="fas fa-sign-in-alt"> ログイン</i>
                <% end %>
              </li>
              <li class="nav-item">
                <%= link_to new_user_registration_path, class: "nav-link" do %>
                  <i class="fas fa-user-edit"> 新規登録</i>
                <% end %>
              </li>
            </ul>
          <% end %>
        </div>
      </nav>
    <% end %>

    <div class="container-fluid">
      <%= yield %>
    </div>

  </body>
</html>
