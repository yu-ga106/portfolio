<div class="row d-inline-block" style="padding: 0 10px;">
  <div class="col-md-12 title">
    <h3>お問い合わせ詳細</h3>
  </div>
</div>

<div class="row" style="max-width: 575px; margin: auto;">
  <table class="table contact_box" style="background-color: ivory;">
    <tr>
      <th style="width: 45%;">氏名</th>
      <td style="width: 55%; max-width: 0;" class="over-text">
        <%= link_to admins_user_path(@contact.user), style: "color: black; text-decoration: none;" do %>
          <%= "#{@contact.user.last_name} #{@contact.user.first_name} (#{@contact.user.read_last_name} #{@contact.user.read_first_name})" %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>メールアドレス</th>
      <td style="max-width: 0;" class="over-text"><%= mail_to "#{@contact.user.email}" %></td>
    </tr>
    <tr>
      <th>日時</th>
      <td><%= l @contact.created_at, format: :long %></td>
    </tr>
    <tr>
      <th>件名</th>
      <td><%= @contact.title %></td>
    </tr>
    <tr>
      <th>内容</th>
      <td><%= simple_format(@contact.content) %></td>
    </tr>
  </table>
</div>

<%= form_with model: [:admins, @contact], local: true do |f| %>
<div class="row" style="max-width: 575px; margin: 20px auto;">
  <div class="col-6">
    <%= f.select :status, [["未対応","未対応"],["対応済","対応済"]], {}, {class: "form-control", style: "width: 100%;"} %>
  </div>
  <div class="col-3">
    <%= f.submit '更新', class: "btn btn-primary", style: "width: 100%;" %>
  </div>
  <div class="col-3">
    <%= link_to "削除", admins_contact_path(@contact), class: "btn btn-danger", style: "width: 100%;", method: :delete, "data-confirm" => "お問い合わせを削除します。よろしいですか？" %>
  </div>
</div>
<% end %>