<div class="row d-inline-block" style="padding: 0 10px;">
  <div class="col-md-12 title">
    <h3><%= @name %>ユーザー一覧</h3>
  </div>
</div>

<table class="table table-sm" style="max-width: 768px; margin: auto;">
  <thead>
    <tr class="table-success">
      <th style="width: 10%; text-align: center;">ID</th>
      <th style="width: 90%">氏名</th>
    </tr>
  </thead>
  <% @users.each do |user| %>
    <tbody>
      <tr>
        <td style="text-align: center; padding: 10px"><%= user.id %></td>
        <td class="over-text" style="max-width: 0;">
          <%= link_to admins_user_path(user), style: "color: black; text-decoration: none;" do %>
            <%= attachment_image_tag user, :image, :fill, 100, 100, fallback: 'no_image.jpg', size: '100x100', style: "border-radius: 50px; max-width: 40px;" %><%= "#{user.last_name} #{user.first_name} (#{user.read_last_name} #{user.read_first_name})" %>
          <% end %>
        </td>
      </tr>
    </tbody>
  <% end %>
</table>

<%= paginate @users %>